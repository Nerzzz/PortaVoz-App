<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/bgColor">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00FFFFFF"
        tools:context=".auth.LoginActivity">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/login_btnReturn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins_regular"
            android:includeFontPadding="false"
            android:padding="5dp"
            android:text="Voltar"
            android:textSize="14sp"
            app:backgroundTint="#00FFFFFF"
            app:icon="@drawable/ic_chevron_left"
            app:iconPadding="0dp"
            android:textColor="?attr/txtColor"
            app:iconTint="?attr/txtColor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:rippleColor="#00FFFFFF" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="236dp"
            android:layout_height="150dp"
            android:layout_marginTop="60dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/description1"
            android:scaleType="fitCenter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/imageView5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="?attr/logo"
            tools:srcCompat="?attr/logo" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="132dp"
            android:contentDescription="@string/description1"
            android:rotation="-60"
            android:translationX="-24dp"
            android:translationZ="-1dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/bg_element1"
            tools:srcCompat="@drawable/bg_element1" />

        <TextView
            android:id="@+id/mainTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:includeFontPadding="false"
            android:text="@string/headerCadPage"
            android:textAllCaps="false"
            android:textColor="?attr/txtColor"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/imageView4"
            app:layout_constraintHorizontal_bias="0.51"
            app:layout_constraintStart_toStartOf="@+id/imageView4"
            app:layout_constraintTop_toBottomOf="@+id/imageView4" />

        <EditText
            android:id="@+id/login_etLogin"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="40dp"
            android:autofillHints=""
            android:background="@drawable/btn_border"
            android:ems="10"
            android:fontFamily="@font/poppins"
            android:hint="@string/hintMail"
            android:includeFontPadding="false"
            android:inputType="text|textEmailAddress"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textAllCaps="false"
            android:textColor="?attr/txtColor"
            android:textColorHint="?attr/hintColor"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mainTitle" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:gravity="center|center_horizontal|center_vertical"
            android:text="@string/mail"
            android:textSize="13sp"
            app:layout_constraintBottom_toTopOf="@+id/login_etLogin"
            app:layout_constraintStart_toStartOf="@+id/login_etLogin"
            android:textColor="?attr/primaryNavColor" />

        <TextView
            android:textColor="?attr/primaryNavColor"
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:gravity="center|center_horizontal|center_vertical"
            android:text="@string/pass"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="13sp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout5"
            app:layout_constraintStart_toStartOf="@+id/linearLayout5" />

        <Button
            android:id="@+id/login_btnLogin"
            android:layout_width="126dp"
            android:layout_height="48dp"
            android:layout_marginStart="40dp"
            android:background="@drawable/gradient_button"
            android:fontFamily="@font/poppins_medium"
            android:includeFontPadding="false"
            android:text="Entrar"
            android:textAllCaps="false"
            android:textColor="@color/whiteText"
            android:textSize="15sp"
            android:textStyle="bold"
            app:backgroundTint="@null"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/login_txtForgotPsw" />

        <TextView
            android:id="@+id/textView_divider2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"
            android:fontFamily="@font/poppins"
            android:includeFontPadding="false"
            android:text="Ou entre de outra forma"
            android:textAllCaps="false"
            android:textColor="?attr/secondaryNavColor"
            android:textSize="15sp"
            app:layout_constraintBottom_toTopOf="@+id/login_btnLoginGoogle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/login_btnLogin" />

        <View
            android:id="@+id/divider_left"
            android:layout_width="0dp"
            android:layout_height="0.8dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="8dp"
            android:background="?attr/secondaryNavColor"
            app:layout_constraintBottom_toBottomOf="@+id/textView_divider2"
            app:layout_constraintEnd_toStartOf="@+id/textView_divider2"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView_divider2"
            app:layout_constraintVertical_bias="0.0" />

        <View
            android:id="@+id/divider_right"
            android:layout_width="0dp"
            android:layout_height="0.8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="40dp"
            android:background="?attr/secondaryNavColor"
            app:layout_constraintBottom_toBottomOf="@+id/textView_divider2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/textView_divider2"
            app:layout_constraintTop_toTopOf="@+id/textView_divider2"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/login_btnLoginGoogle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/btn_border"
            android:drawableLeft="@drawable/google_rezised"
            android:drawablePadding="0dp"
            android:fontFamily="@font/poppins"
            android:includeFontPadding="false"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:text="Entrar com Google"
            android:textAllCaps="false"
            android:textColor="?attr/primaryNavColor"
            android:textSize="15sp"
            app:backgroundTint="@null"
            app:layout_constraintBottom_toTopOf="@+id/login_btnLoginFacebook"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" />


        <Button
            android:id="@+id/login_btnLoginFacebook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/btn_border"
            android:drawableLeft="@drawable/face_rezised"
            android:fontFamily="@font/poppins"
            android:includeFontPadding="false"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:text="Entrar com Facebook"
            android:textAllCaps="false"
            android:textColor="?attr/primaryNavColor"
            android:textSize="15sp"
            app:backgroundTint="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/login_txtForgotPsw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="40dp"
            android:clickable="true"
            android:fontFamily="@font/poppins_medium"
            android:gravity="right"
            android:includeFontPadding="false"
            android:text="Esqueci minha senha"
            android:textColor="@color/gradienteCenter"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout5" />

        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/btn_border"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            app:layout_constraintEnd_toEndOf="@+id/login_etLogin"
            app:layout_constraintStart_toStartOf="@+id/login_etLogin"
            app:layout_constraintTop_toBottomOf="@+id/login_etLogin">

            <EditText
                android:id="@+id/login_etPsw"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#00FFFFFF"
                android:ems="10"
                android:fontFamily="@font/poppins"
                android:hint="@string/hintPass"
                android:includeFontPadding="false"
                android:inputType="textPassword"
                android:textColor="?attr/txtColor"
                android:textColorHint="@color/greyText"
                android:textSize="15sp" />

            <ImageButton
                android:id="@+id/login_btnSeePsw"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#00FFFFFF"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_eye_off"
                app:tint="@color/gradienteCenter" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>