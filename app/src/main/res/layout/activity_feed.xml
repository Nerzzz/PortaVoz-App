<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/bgColor"
    tools:context=".FeedActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:fontFamily="@font/lexenddeca"
        android:text="@string/app_name"
        android:textColor="?attr/txtColor"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/feed_imgUser"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/feed_imgUser" />

    <ImageView
        android:id="@+id/feed_imgUser"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/lay_rounded"
        android:clickable="true"
        android:clipToOutline="true"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/user_image_placeholder" />

    <ImageButton
        android:id="@+id/feed_btnNotifications"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginEnd="10dp"
        android:background="#00FFFFFF"
        android:foregroundGravity="center"
        android:scaleType="center"
        android:src="@drawable/ic_bell"
        app:layout_constraintBottom_toBottomOf="@+id/feed_imgUser"
        app:layout_constraintEnd_toStartOf="@+id/feed_imgUser"
        app:layout_constraintTop_toTopOf="@+id/feed_imgUser"
        app:tint="?attr/txtColor" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/feed_recyTimeLine"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/feed_imgUser"
        tools:itemCount="2"
        tools:listitem="@layout/layout_post" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/feed_fabReport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="25dp"
        android:clickable="true"
        android:scaleType="centerInside"
        app:backgroundTint="@color/gradiente2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_plus"
        app:tint="@android:color/white" />

    <ProgressBar
        android:id="@+id/feed_loadingProgress"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="@color/gradienteCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/feed_recyTimeLine" />

    <ImageButton
        android:id="@+id/feed_btnSearch"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginEnd="10dp"
        android:background="#00FFFFFF"
        android:foregroundGravity="center"
        android:scaleType="center"
        android:src="@drawable/ic_mag"
        app:layout_constraintBottom_toBottomOf="@+id/feed_btnNotifications"
        app:layout_constraintEnd_toStartOf="@+id/feed_btnNotifications"
        app:layout_constraintTop_toTopOf="@+id/feed_btnNotifications"
        app:tint="?attr/txtColor" />

    <ImageButton
        android:id="@+id/feed_btnChat"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginEnd="10dp"
        android:background="#00FFFFFF"
        android:foregroundGravity="center"
        android:scaleType="center"
        android:src="@drawable/ic_message"
        app:layout_constraintBottom_toBottomOf="@+id/feed_btnSearch"
        app:layout_constraintEnd_toStartOf="@+id/feed_btnSearch"
        app:layout_constraintTop_toTopOf="@+id/feed_btnSearch"
        app:tint="?attr/txtColor" />
</androidx.constraintlayout.widget.ConstraintLayout>